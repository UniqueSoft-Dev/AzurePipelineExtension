{
    "id": "1ae9cc7b-29a4-4614-82df-00dc3ea74cd0",
    "name": "ApplicationBackup",
    "friendlyName": "Application Backup Manager",
    "description": "Backup files, folder or IIS website before update",
    "helpMarkDown": "",
    "category": "Utility",
    "visibility": [
        "Release"
    ],
    "author": "NeedCode",
    "preview": true,
    "version": {
        "Major": 1,
        "Minor": 0,
        "Patch": 0
    },
    "instanceNameFormat": "Backup Application $(samplestring)",
    "groups": [],
    "inputs": [
        {
            "name": "BackupType",
            "type": "radio",
            "label": "Backup type",
            "required": true,
            "defaultValue": "Folder",
            "options": {
                "Agent": "Folder",
                "DeploymentGroup": "Website"
            }
        },

        {
            "name": "SourceMachineName",
            "label": "Machine Name",
            "type": "string",
            "required": true
        },
        {
            "name": "SourcePath",
            "label": "Source Path",
            "type": "string",
            "visibleRule": "DeploymentType=Folder"
        },
        {
            "name": "SourceWebsiteName",
            "label": "Source Website Name",
            "type": "string",
            "visibleRule": "DeploymentType=Website"
        },
        {
            "name": "AdminLogin",
            "label": "Admin login",
            "required": true,
            "helpMarkDown": "Administrator login for the source machines."        
        },
        {
            "name": "AdminPassword",
            "label": "Admin Password",
            "required": true,
            "helpMarkDown": "Password for administrator login for the source machines. It can accept variable defined in Build/Release definitions as '$(passwordVariable)'. You may mark variable type as 'secret' to secure it."        
        },
        {
            "name": "DestinationPath",
            "label": "Destination Path",
            "type": "string",
            "required": true
        },
        {
            "name": "CreateZip",
            "type": "boolean",
            "label": "Compression files",
            "defaultValue": false
        },
        {
            "name": "ZipFileName",
            "label": "Zip fileName",
            "type": "string",
            "defaultValue": "Backup_$(Build.BuildNumber).zip",
            "visibleRule": "CreateZip=true"
        }
    ],
    "execution": {
        "PowerShell3": {
            "target": "BackupTask.ps1",
            "platforms": [
                "windows"
            ],
            "workingDirectory": "$(currentDirectory)"
        }
    }
}